# Configurazione npm per Render deployment
# Assicura che le dipendenze platform-specific vengano installate correttamente
optional=true
fund=false
audit=false
progress=false

# Configurazioni per migliorare l'affidabilit√† dell'installazione
prefer-offline=false
cache-max=86400000

# Configurazioni specifiche per le dipendenze Rollup
# Forza l'installazione delle dipendenze platform-specific anche se non corrispondono esattamente
force=false
